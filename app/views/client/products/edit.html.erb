<%= form_tag "/client/products/#{ @product['id'] }" method: :patch do %>
  <div>
    Name: <input type="text" name="title" value="<%= @product['name'] %>">
  </div>
  <div>
   Price: <input type="text" name="title" value="<%= @product['price'] %>">
  </div> 
  <div>
  Description: <input type="text" name="description" value="<%= @product['description'] %>">
  </div>
  <div>
    Image URL: <input type="text" name="image_url" value="<%= @product['image_url'] %>">
  </div>
  <input type="submit" value="Update Product"> 
  
<% end %>